<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>

    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="700px">
            <pre><%= blog.body %></pre>

        </div>

        <div class="container mt-4">
            <img src=<%=blog.createdBy.profileImageURL%> width="50px"> <%= blog.createdBy.fullName %>

        </div>

        <div class="container mt-3">
            <h2>Comments (<%= comments.length %>)</h2>
            <% if(locals.user){ %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <input type="text" class="form-control" placeholder="Add your Comment" name="content">
                <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
            </form>
            
           <% } %>
           <div class="mt-3">
               <% comments.forEach(comment => { %>
                    <div>
                        <img src="<%= comment.createdBy.profileImageURL %>" width="50px"><%=comment.createdBy.fullName %>
                        <pre><%= comment.content %></pre>
                    </div>
               <% })  %>
            </div>
        </div>
        <%- include('./partials/script') %>

</body>

</html>